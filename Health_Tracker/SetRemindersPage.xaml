<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthTrackerApp.SetRemindersPage">

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Set Reminder" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20" />

        <Entry Placeholder="Enter reminder title" x:Name="TitleEntry" FontSize="18" />

        <StackLayout Orientation="Horizontal" Spacing="20">
            <DatePicker x:Name="DatePicker" FontSize="18" />
            <TimePicker x:Name="TimePicker" FontSize="18" />
        </StackLayout>

        <Button Text="Save Reminder" Clicked="OnSaveReminderClicked"
                BackgroundColor="#4CAF50" TextColor="White" FontSize="18"
                CornerRadius="10" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>
