<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthTrackerApp.SetRemindersPage">

    <StackLayout Padding="20">
        <Label Text="Set Reminder" FontSize="24" HorizontalOptions="Center" Margin="0,0,0,20" />

        <Entry Placeholder="Enter reminder title" x:Name="TitleEntry" Margin="0,0,0,10" />
        <DatePicker x:Name="DatePicker" Margin="0,0,0,10" />
        <TimePicker x:Name="TimePicker" Margin="0,0,0,10" />

        <Button Text="Save Reminder" Clicked="OnSaveReminderClicked" HorizontalOptions="FillAndExpand" Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>
