<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthTrackerApp.BmiTrackingPage">

    <StackLayout Padding="20">
        <Label Text="BMI Tracking" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,10" />

        <Entry x:Name="weightEntry" Placeholder="Enter weight (kg)" Keyboard="Numeric" Margin="0,0,0,10" />
        <Entry x:Name="heightEntry" Placeholder="Enter height (m)" Keyboard="Numeric" Margin="0,0,0,10" />

        <Button Text="Calculate BMI" Clicked="OnCalculateClicked" HorizontalOptions="Center" Margin="0,10,0,0" />

        <Label x:Name="bmiLabel" Text="" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,0" />
    </StackLayout>

</ContentPage>
