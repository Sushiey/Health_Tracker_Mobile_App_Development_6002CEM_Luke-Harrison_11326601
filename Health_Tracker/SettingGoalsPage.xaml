<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthTrackerApp.SettingGoalsPage">

    <StackLayout Padding="20">
        <Label Text="Set Goals" FontSize="Large" HorizontalOptions="Center" Margin="0,20,0,10" />

        <!-- Input fields for setting goals -->
        <Entry Placeholder="Enter daily step goal" Keyboard="Numeric" x:Name="stepGoalEntry" Margin="0,0,0,10" />
        <Entry Placeholder="Enter daily calorie goal" Keyboard="Numeric" x:Name="calorieGoalEntry" Margin="0,0,0,10" />

        <!-- Button to save goals -->
        <Button Text="Save Goals" Clicked="OnSaveGoalsClicked" HorizontalOptions="Center" Margin="0,10,0,0" />
    </StackLayout>

</ContentPage>
